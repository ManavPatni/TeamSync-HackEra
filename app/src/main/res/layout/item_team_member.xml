<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <TextView
        android:id="@+id/tv_memberNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/_15ssp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/tv_memberNumber"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Name"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_13ssp"/>

        <TextView
            android:id="@+id/tv_memberGenderAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender - Age"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_11ssp"/>

    </LinearLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:checked="true"
        app:buttonIconTint="@color/white"
        app:buttonTint="#3F51B5"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>